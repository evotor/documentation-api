{
    "swagger": "2.0",
    "info": {
        "version": "0.0.1-SNAPSHOT",
        "title": "API запросов Эвотор к товароучетной системе (ТУ)",
        "description": "Описание запросов Эвотор [сервер] к API товароучетной системы [сервер]. Предполагается, что партнер хранит у себя мэпинг своих сущностей и сущностей Эвотор"
    },
    "paths": {
        "/api/v1/inventories/employees": {
            "put": {
                "summary": "Создание/редактирвоание сотрудников",
                "description": "Создание сотрудника / сотрудников в системе партнера.\nПодразумевается, что мы мастер-система и все изменения сотрудников будут исходить от нас.\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/auth"
                    },
                    {
                        "name": "employee",
                        "in": "body",
                        "description": "Массив сотрудников Эвотор",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/employee"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "Массив привязок",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "uuid": {
                                        "type": "string"
                                    },
                                    "partnerId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error"
                    }
                }
            }
        },
        "/api/v1/inventories/stores": {
            "put": {
                "summary": "Создание/редактирвоание точек продаж",
                "description": "Создание точки / точек продаж в системе партнера\nПодразумевается, что мы мастер-система и все изменения точек продаж будут исходить от нас.\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/auth"
                    },
                    {
                        "name": "store",
                        "in": "body",
                        "description": "Массив магазинов (точек продаж) Эвотор",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/store"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "Массив привязок",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "uuid": {
                                        "type": "string"
                                    },
                                    "partnerId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error"
                    }
                }
            }
        },
        "/api/v1/inventories/stores/{storeId}/products": {
            "get": {
                "summary": "Получение товаров из ТУ системы",
                "description": "Получение списка товаров из Эвотор\n. В GET запросе параметр quantity обязательный (например, в post опциональный)",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/auth"
                    },
                    {
                        "name": "storeId",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/product"
                            }
                        }
                    },
                    "401": {
                      "$ref": "#/responses/status401"
                    },
                    "402": {
                      "$ref": "#/responses/status402"
                    },
                    "404": {
                      "$ref": "#/responses/status404"
                    },
                    "500": {
                      "$ref": "#/responses/status500"
                    },
                    "503": {
                      "$ref": "#/responses/status503"
                    },
                    "default": {
                        "description": "unexpected error"
                    }
                }
            },
            "post": {
                "summary": "Создание товаров в ТУ системе",
                "description": "Загрузка массива новых товаров созданных на клиенте на сервер.\nПолучение в ответе привязок идентификатора товара на терминале к идентификатору на сервере. \n В POST запросе параметр quantity опциональный (например, в post обязательный)",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/auth"
                    },
                    {
                        "name": "storeId",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "products",
                        "in": "body",
                        "description": "массив продуктов",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/product"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "Массив привязок",
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "uuid": {
                                        "type": "string"
                                    },
                                    "id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                      "$ref": "#/responses/status401"
                    },
                    "402": {
                      "$ref": "#/responses/status402"
                    },
                    "404": {
                      "$ref": "#/responses/status404"
                    },
                    "500": {
                      "$ref": "#/responses/status500"
                    },
                    "503": {
                      "$ref": "#/responses/status503"
                    }
                }
            }
        },
        "/api/v1/inventories/stores/{storeId}/documents": {
            "put": {
                "summary": "Выгрузка документов",
                "description": "Загрузка во внешнюю ТУ документов с транзакциями\n",
                "parameters": [
                    {
                        "$ref": "#/parameters/auth"
                    },
                    {
                        "name": "storeId",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "documents",
                        "in": "body",
                        "description": "массив документов",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/document"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                      "$ref": "#/responses/status401"
                    },
                    "402": {
                      "$ref": "#/responses/status402"
                    },
                    "404": {
                      "$ref": "#/responses/status404"
                    },
                    "500": {
                      "$ref": "#/responses/status500"
                    },
                    "503": {
                      "$ref": "#/responses/status503"
                    }
                }
            }
        },
        "/api/v1/inventories/products/schemes": {
            "get": {
                "summary": "Схема отображения не стандартных реквизитов",
                "description": "Получение описания дополнительных полей в продуктах\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/auth"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "headers": {
                            "ETag": {
                                "description": "метка для кэширования на клиенте",
                                "type": "string"
                            }
                        },
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/scheme"
                            }
                        }
                    },
                    "default": {
                        "description": "unexpected error"
                    }
                }
            }
        }
    },


    "responses": {
        "status401": {
            "description": "Ключ авторизации неверный "
        },
        "status402": {
            "description": "Точка продаж, аккаунт или поддержка интеграции заблокирована"
        },
        "status404": {
            "description": "Не найдена указанная точка продаж"
        },
        "status500": {
            "description": "Внутренняя ошибка сервиса"
        },
        "status503": {
            "description": "Сервис недоступен"
        }
    },

    "parameters": {
        "auth": {
            "name": "basic auth or token",
            "in": "header",
            "description": "пользовательская авторизация в системе партнера",
            "required": true,
            "type": "string"
        }
    },
    "definitions": {
        "product": {
            "type": "object",
            "required": [
                "uuid",
                "type"
            ],
            "properties": {
                "uuid": {
                    "type": "string",
                    "description": "уникальный UUID продукта в Эвотор"
                },
                "barcodes": {
                    "type": "array",
                    "description": "массив штрихкодов",
                    "items": {
                        "type": "string"
                    }
                },
                "name": {
                    "type": "string",
                    "description": "наименование товара / услуги"
                },
                "price": {
                    "type": "number",
                    "description": "цена продажи"
                },
                "quantity": {
                    "type": "number",
                    "description": "кол-во товара. параметр опциональный, зависит от типа запроса. в GET - он обязательный, в POST - может осутствовать"
                },
                "costPrice": {
                    "type": "number",
                    "description": "закупочная цена"
                },
                "measureName": {
                    "type": "string",
                    "description": "ед. измерения"
                },
                "tax": {
                    "type": "number",
                    "description": "налог / ставка НДС"
                },
                "allowToSell": {
                    "type": "boolean",
                    "description": "флаг. доступность для продажи"
                },
                "description": {
                    "type": "string",
                    "description": "описание товара / услуги"
                },
                "articleNumber": {
                    "type": "string",
                    "description": "артикул"
                },
                "parentCode": {
                    "type": "string",
                    "description": "код группы товаров (родительская папка)"
                },
                "isGroup": {
                    "type": "boolean",
                    "description": "группа или нет"
                },
                "type": {
                    "type": "string",
                    "description": "тип товара - обычный, маркированный алкоголь, немаркированный алкоголь",
                    "enum": [
                        "NORMAL",
                        "ALCOHOL_MARKED",
                        "ALCOHOL_NOT_MARKED"
                    ]
                },
                "alcoholByVolume": {
                    "type": "boolean",
                    "description": "крепость алкогольной  продукции"
                },
                "alcoholProductKindCode": {
                    "type": "number",
                    "description": "код вида алкогольной продукции"
                },
                "tarVolume": {
                    "type": "number",
                    "description": "емкость тары, л.̆"
                },
                "imagePath": {
                    "type": "string",
                    "description": "файл с картинкой товара  (пока не используется)"
                },
                "fields": {
                    "type": "object",
                    "description": "дополнительные поля, созданные пользователем, которые не объявлены выше (для их отрисовки на интерфейсах кассы необходимо передать их схему)"
                }
            }
        },
        "scheme": {
            "type": "object",
            "properties": {
                "uuid": {
                    "type": "string"
                },
                "code": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "value": {
                    "type": "object"
                },
                "view": {
                    "type": "object",
                    "properties": {
                        "input": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "TEXT",
                                        "NUMBER",
                                        "SELECT",
                                        "RADIO"
                                    ]
                                },
                                "data": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "receipt": {
            "type": "object",
            "required": [
                "uuid",
                "deviceId",
                "storeId",
                "dateTime"
            ],
            "properties": {
                "uuid": {
                    "type": "string"
                },
                "deviceId": {
                    "type": "string"
                },
                "storeId": {
                    "type": "string"
                },
                "companyName": {
                    "type": "string"
                },
                "inn": {
                    "type": "number"
                },
                "dateTime": {
                    "description": "ID смены",
                    "type": "string"
                },
                "employeeId": {
                    "type": "string"
                },
                "paymentSource": {
                    "description": "Способ оплаты",
                    "type": "string",
                    "enum": [
                        "CASH",
                        "CARD",
                        "OTHER"
                    ]
                },
                "tax": {
                    "type": "number"
                },
                "totalDiscount": {
                    "type": "number"
                },
                "totalAmount": {
                    "type": "number"
                },
                "products": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            },
                            "price": {
                                "type": "number"
                            },
                            "quantity": {
                                "type": "number"
                            },
                            "mesuareName": {
                                "type": "string"
                            },
                            "discount": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        },
        "employee": {
            "type": "object",
            "required": [
                "uuid",
                "role",
                "name"
            ],
            "properties": {
                "uuid": {
                    "type": "string",
                    "description": "уникальный UUID сотрудника в Эвотор"
                },
                "name": {
                    "type": "string",
                    "description": "наименование сотрудника (Фамилия Имя) в Эвотор"
                },
                "role": {
                    "type": "string",
                    "description": "роль сотрудника (пока только Админ и Кассир)",
                    "enum": [
                        "ADMIN",
                        "CASHIER"
                    ]
                }
            }
        },
        "store": {
            "type": "object",
            "required": [
                "uuid",
                "name"
            ],
            "properties": {
                "uuid": {
                    "type": "string",
                    "description": "уникальный UUID точки продаж в Эвотор"
                },
                "name": {
                    "type": "string",
                    "description": "наименование точки продаж в Эвотор"
                },
                "address": {
                    "type": "string",
                    "description": "адресс точки продаж в Эвотор"
                }
            }
        },
        "document": {
            "type": "object",
            "required": [
                "uuid",
                "type"
            ],
            "properties": {
                "uuid": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "SELL",
                        "PAYBACK",
                        "CASH_INCOME",
                        "CASH_OUTCOME",
                        "OPEN_SESSION",
                        "FPRINT_OPERATION",
                        "CLOSE_SESSION",
                        "INVENTORY",
                        "ACCEPT",
                        "RETURN",
                        "WRITE_OFF",
                        "REVALUATION",
                        "OPEN_TARE"
                    ]
                },
                "transactions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/transaction"
                    }
                }
            }
        },
        "transaction": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "DISCOUNT_DOCUMENT",
                        "DISCOUNT_POSITION",
                        "DISCOUNT_DOCUMENT_POSITION",
                        "DOCUMENT_CANCEL",
                        "DOCUMENT_OPEN",
                        "DOCUMENT_CLOSE",
                        "DOCUMENT_CLOSE_FPRINT",
                        "REGISTER_POSITION",
                        "REGISTER_BILLS",
                        "CASH_INCOME",
                        "CASH_OUTCOME",
                        "INVENTORY",
                        "PAYMENT",
                        "OPEN_SESSION",
                        "CLOSE_SESSION",
                        "FPRINT_OPEN_SESSION",
                        "FPRINT_X_REPORT",
                        "FPRINT_Z_REPORT",
                        "POSITION_TAX",
                        "REVALUATION"
                    ]
                }
            }
        }
    }
}
